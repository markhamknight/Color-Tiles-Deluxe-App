<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.example.android.colortilesdeluxe.Highscore">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout2">
    <TextView
        android:id="@+id/highscorelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore:"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_toRightOf="@id/highscorelabel"
       />
    </RelativeLayout>
    <TextView
        android:id="@+id/currentscorelabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Score"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_above="@+id/currentscore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/currentscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/rtrycont"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentscore"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true">
       <ImageView
           android:layout_width="50sp"
           android:layout_height="50sp"
           android:background="@drawable/home"
           android:id="@+id/home"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="50sp"
           android:textSize="40sp"
           android:textAlignment="center"
           android:text="HOME"
           android:onClick="goHome"
           android:layout_toRightOf="@+id/home"
           android:background="@android:color/white"
           />
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homecont"
        android:layout_below="@+id/rtrycont"
        android:layout_alignLeft="@+id/rtrycont"
        android:layout_alignStart="@+id/rtrycont">
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/retry"
            android:id="@+id/retry"
            />
        <Button
            android:id="@+id/retrybut"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="RETRY"
            android:onClick="tryAgain"
            android:layout_toRightOf="@+id/retry"
            android:background="@android:color/white"
            />
    </RelativeLayout>
</RelativeLayout>
